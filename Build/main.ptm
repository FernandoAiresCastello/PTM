PAL 2,0xff0000
PAL 3,0x00ff00
PAL 4,0x0000ff
PAL 5,0xff00ff

TILE.NEW '*',4,5
TILE.ADD '*',5,4
FILL
VSYNC

BUF.NEW buf2,100,100,2
BUF buf2
VAR buf2_vw,32
VAR buf2_vh,24
TILE.NEW '-',2,3
TILE.ADD '+',2,3
FILL
VSYNC

loop:
	VIEW 0,0,buf2_vw,buf2_vh
	VSYNC
	;KCALL $kb.right,kb_right
	;KCALL $kb.left,kb_left
	;KCALL $kb.enter,kb_enter
    INKEY key
    CMP key,'x'
    IF.EQ.CALL kb_right
	GOTO loop

kb_right:
	INC buf2_vw
	RET
kb_left:
	DEC buf2_vw
	RET
kb_enter:
	BUF.SEL default
	RET
