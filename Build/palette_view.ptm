BGCOL 0x78
COLOR 15,0
TRON

; === Horizontal ruler ===
VAR ind_x,2
FOR i,0,16
	LOCATE ind_x,1
	FMT ind,"%X",i
	PRINT ind
	INC ind_x
NEXT

; === Vertical ruler ===
VAR ind_y,2
FOR i,0,16
	LOCATE 1,ind_y
	FMT ind,"%X",i
	PRINT ind
	INC ind_y
NEXT

; === Colors ===
VAR color,0
FOR y,2,18
	FOR x,2,18
		TILE.NEW 0xdb,color,0
		LOCATE x,y
		PUT
		INC color
	NEXT
NEXT

VSYNC
