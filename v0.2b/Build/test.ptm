TITLE "Hello World!"
WINDOW 360, 200, 4, &H101010

CLIP.SET 100, 40, 250, 150

loop:
	CLIP.CLR &h000080
	FOR i, 0, 100
		PSET i, i, &h00ff00
	NEXT
	UPDATE
	IF.KEY "RIGHT"
		CLIP.SCRL 1, 0
	ENDIF
	IF.KEY "LEFT"
		CLIP.SCRL -1, 0
	ENDIF
	IF.KEY "DOWN"
		CLIP.SCRL 0, 1
	ENDIF
	IF.KEY "UP"
		CLIP.SCRL 0, -1
	ENDIF

	GOTO loop