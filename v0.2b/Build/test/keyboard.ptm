
VAR row, 0

#================================================
	loop_if_key:
#================================================
UPDATE
IF.KEY "SCRLOCK"
	CALL println
ENDIF
GOTO loop_if_key

#================================================
	println:
#================================================
IF.GT row, 24
	CLS
	LOCATE 0, 0
	VAR row, 0
ENDIF
PRINTF "PRESSED\n"
INC row
RET

#================================================
	loop_inkey:
#================================================
UPDATE
INKEY key
IF.NEQ key, 0
	IF.GT row, 24
		CLS
		LOCATE 0, 0
		VAR row, 0
	ENDIF
	PRINTF "{%key}\n"
	INC row	
ENDIF
GOTO inkey
